<h3>{{shortDescription}}</h3>

<div class='financial'>
  <span class='rent'>
    {{rent}}/<span class='per'>{{rentPer}}</span>
  </span>

  {{#if deposit}}
    <span class='deposit'>
      {{deposit}} deposit
    </span>
  {{/if}}
</div>

<address>
  <span>{{streetAddress}}</span>
  <span>{{region}}</span>
  <span>{{neighborhood}}</span>
</address>

<div class='sqft'>
  {{sqft}} sqft
</div>

<div class='long-description'>
  {{description}}
</div>